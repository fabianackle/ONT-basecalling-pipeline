apptainer {
    cacheDir = '/home/user/data/'
    enabled = true
    pullTimeout = '60 m'
    runOptions = '--nv'
}

conda {
    enabled = true
    useMamba = true
}

process {
    cpus = 8
    executor = 'slurm'
    shell = ['/bin/bash', '-euo', 'pipefail']
    withName: 'DORADO' {
        clusterOptions = '--gpus=1 --constraint="GPUMEM80GB|GPUMEM96GB"'
        memory = '64 GB'
        time = { 30.min * params.gigabases }
    }
    withName: 'DEMUX' {
        memory = '8 GB'
        time = '1h'
    }
}