singularity {
    cacheDir = '/data/user/'
    enabled = true
    runOptions = '--nv'
}

conda {
    enabled = true
    useMamba = true
}

process {
    clusterOptions = '--gpus=A100:2'
    cpus = 8
    executor = 'slurm'
    memory = '16 GB'
    time = { 15.min * params.gigabases }
    shell = ['/bin/bash', '-euo', 'pipefail']
}